<input type="hidden" name="_csrf" value="{{csrfToken}}">
{{#unless error}}	
<div class="w3-container">
	<h1 id="index" class="w3-text-blue w3-left">{{title}}</h1>
	<div class="w3-bar w3-light-grey">
		<a href="/" class="w3-bar-item w3-button">Home</a>
		{{!--<a href="/logout" class="w3-bar-item w3-button w3-blue w3-right">Sign out</a>--}}
		{{!--Protecting log/sign out action against csrf attacks--}}
		<button class="w3-bar-item w3-button w3-blue w3-right" name="logout">Sign out</button>
	</div>
	<div class="w3-card w3-section">
		{{> user.card}}
	</div>
	<div class="w3-card w3-section">
		{{> chart}}
	</div>
	<div id="errorModal" class="w3-modal"></div>
</div>
{{> scripts}}
{{/unless}}

{{#if error}}
<div class="w3-container">
	{{> error}}	
</div>
{{/if}}